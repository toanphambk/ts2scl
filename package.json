{
  "name": "ts2scl",
  "version": "1.0.1",
  "description": "Convert TypeScript to Siemens SCL code",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "files": [
    "dist/core/**/*",
    "dist/utils/**/*",
    "dist/index.*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint \"src/core/**/*.ts\" \"src/utils/**/*.ts\"",
    "lint:fix": "eslint \"src/core/**/*.ts\" \"src/utils/**/*.ts\" --fix",
    "format": "prettier --write \"src/core/**/*.ts\" \"src/utils/**/*.ts\"",
    "format:check": "prettier --check \"src/core/**/*.ts\" \"src/utils/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toanphambk/ts2scl.git"
  },
  "homepage": "https://github.com/toanphambk/ts2scl#readme",
  "bugs": {
    "url": "https://github.com/toanphambk/ts2scl/issues"
  },
  "keywords": [
    "typescript",
    "scl",
    "siemens",
    "tia-portal"
  ],
  "author": "Toan Pham <toanphambk@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^15.14.0",
    "jest": "^29.5.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "@types/reflect-metadata": "^0.0.5",
    "reflect-metadata": "^0.1.14"
  }
}
